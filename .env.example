# ===========================================
# Coffee Management Suite - Environment Config
# ===========================================
# Copy this file to .env and fill in your values.

# Development Mode - Set to true to use mock data without a database
VITE_USE_MOCK_DATA=true

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Server-side Supabase (same URL, but use the service role key for storage/admin ops)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database Connection (Supabase Postgres connection string)
# Found in Supabase Dashboard > Settings > Database > Connection string
# DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres

# Stripe (only needed if testing payment features)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Square Integration (only needed if using Square timeclock sync)
# SQUARE_APP_ID=sq0idp-...
# SQUARE_APP_SECRET=sq0csp-...
# SQUARE_WEBHOOK_SIGNATURE_KEY=...
# SQUARE_ENVIRONMENT=sandbox

# Resend Email (only needed if testing email features)
# RESEND_API_KEY=re_...
# RESEND_FROM_EMAIL=noreply@yourdomain.com

# Environment
NODE_ENV=development
PORT=5001
